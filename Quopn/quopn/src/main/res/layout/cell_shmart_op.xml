<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ewallet_borders">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <ImageView android:id="@+id/ivShmartOpIcon"
            android:scaleType="centerInside"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_shmart_op_loadwallet"/>

        <com.quopn.wallet.views.QuopnTextView
            android:id="@+id/tvShmartOpCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivShmartOpIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="ADD MONEY"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlShmartOpOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#ccffffff">

        <com.quopn.wallet.views.QuopnTextView
            android:id="@+id/tvShmartOpDeferred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:textAllCaps="true"
            android:text="coming\nsoon"
            android:textSize="16sp"/>
    </RelativeLayout>

</RelativeLayout>
